<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="220dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent"
    xmlns:card_view ="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="#80FFFFff"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:id="@+id/small_card_cardview"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:id="@+id/small_card_imageview"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Android MarshMallow The software update everyones to buy for themselves"
                android:maxLines="1"
                android:id="@+id/small_card_product_description"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/small_card_location"
                android:text="Location"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Rs. 5000"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:id="@+id/small_card_price"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condition"
                android:textColor="@color/colorAccent"
                android:textSize="15dp"
                android:id="@+id/small_card_condition"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>