    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:descendantFocusability="blocksDescendants"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:src="@drawable/l1"
                android:clickable="true"
                android:background="#ffccff"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginBottom="5dp"
                android:id="@+id/fragment_feed_banner"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/l"
                android:scaleType="fitXY"
                android:id="@+id/fragment_feed_banner2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Top Product of the Week"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                />


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_feed_recyclerview"
                android:layout_marginBottom="3dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Girls Shop"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_feed_recyclerview2"
                android:layout_marginBottom="3dp"
                />


            <include layout="@layout/dealing_india_footer"
                />

        </LinearLayout>
    </ScrollView>
<!-- </FrameLayout> -->
