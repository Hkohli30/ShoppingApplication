<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hkohli.shoppingapplication.EditProfile"
    tools:showIn="@layout/activity_edit_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Name"
                android:id="@+id/edit_profile_shop_name_textView"
                android:gravity="center"
                android:textSize="18dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="email"
                android:id="@+id/edit_profile_email_textView"
                android:gravity="center"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jalandhar"
                android:id="@+id/edit_profile_location_textView"
                android:gravity="center"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:id="@+id/edit_profile_phone_texView"
                android:gravity="center"
                android:textSize="18dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            >

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Name"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name"
                android:background="#fff"
                android:textSize="20dp"
                android:padding="5dp"
                android:id="@+id/edit_profile_shop_name_editText"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email ID"
                android:background="#fff"
                android:textSize="20dp"
                android:padding="5dp"
                android:id="@+id/edit_profile_email_editText"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:background="#fff"
                android:textSize="20dp"
                android:padding="5dp"
                android:maxLines="5"
                android:id="@+id/edit_profile_about_shop_editText"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whatsapp Contact No"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number"
                android:background="#fff"
                android:textSize="20dp"
                android:maxLength="10"
                android:inputType="phone"
                android:padding="5dp"
                android:id="@+id/edit_profile_phone_editText"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_marginBottom="8dp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_state_spinner"
                android:background="#fff"
                android:textSize="20dp"
                android:padding="5dp"
                />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:layout_marginBottom="8dp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_city_spinner"
                android:background="#fff"
                android:textSize="20dp"
                android:backgroundTint="#fff"
                android:padding="5dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_profile_update_button"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="@color/colorAccent"
                android:text="Update"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
